<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/folderlistbg">
    <RelativeLayout  android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_height="25dip" android:background="@drawable/folderlisttitlebg">
        <TextView  android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:text="@string/folder_list" android:textSize="20dip" android:paddingLeft="10dip"></TextView>
        <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content"  android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:background="@drawable/close" android:id="@+id/close_btn"></ImageButton>
    </RelativeLayout>
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
    	<GridView
			android:id="@+id/folder_list_grid"
			android:layout_width="fill_parent"
			android:numColumns="2"
			android:gravity="fill_vertical|fill_horizontal"
			android:isScrollContainer="true"
			android:scrollbars="vertical"
			android:smoothScrollbar="true"
			android:paddingTop="10dp"
			android:columnWidth="380px"
			android:layout_height="wrap_content"
			android:stretchMode="columnWidth" android:paddingBottom="25dip" android:paddingRight="10dip" android:paddingLeft="10dip"></GridView>
    </LinearLayout>
</LinearLayout>
